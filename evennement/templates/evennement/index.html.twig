{% extends 'front.html.twig' %}

{% block title %}Evennement index{% endblock %}

{% block body %}
    <h1>Evennement index</h1>

    <div class="row">
        {% for evennement in evennements %}
            <div class="col-md-4">
                <div class="card mb-4 shadow-sm">
                    
                    <div class="card-body">
                        <h5 class="card-title">{{ evennement.nom }}</h5>
                        <p class="card-text">Date début: {{ evennement.dateDebut ? evennement.dateDebut|date('Y-m-d H:i:s') : '' }}</p>
                        <p class="card-text">Date fin: {{ evennement.dateFin ? evennement.dateFin|date('Y-m-d H:i:s') : '' }}</p>
                        <p class="card-text">Lieu: {{ evennement.lieu }}</p>
                        <p class="card-text">Nombre de participants: {{ evennement.nbParticipant }}</p>
                        <p class="card-text">Sponsor: {{ evennement.sponsor.nom }}</p>
                        
                    </div>
                    <img class="card-img-top" src="{{ asset('assets/img/' ~ evennement.image) }}" alt="...">
                    <div class="d-flex justify-content-between align-items-center">
                            <div class="btn-group">
                                <a href="{{ path('app_evennement_show', {'id': evennement.id}) }}" class="btn btn-sm btn-outline-secondary">Voir détails</a>
                            </div>
                        </div>
                </div>
            </div>
        {% else %}
            <div class="col-md-12">
                <div class="alert alert-warning" role="alert">
                    Aucun événement trouvé.
                </div>
            </div>
        {% endfor %}
    </div>
{% endblock %}
